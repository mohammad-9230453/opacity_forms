<UserControl x:Class="opacity_forms.Boxes.windows.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:opacity_forms.Boxes.windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <StackPanel OpacityMask="White" Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel.Effect>
                <BlurEffect Radius="5000" KernelType="Gaussian" RenderingBias="Quality"/>
            </StackPanel.Effect>
        </StackPanel>
    </Grid>
</UserControl>
